{
    "name": "git-ai-commiter",
    "displayName": "Git AI Committer",
    "description": "Automatically generates commit messages and commits changes using AI",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other",
        "SCM"
    ],
    "activationEvents": [
        "workspaceContains:.git"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "git-ai-commiter.enableAutoCommit",
                "title": "Enable Auto Commit"
            },
            {
                "command": "git-ai-commiter.disableAutoCommit",
                "title": "Disable Auto Commit"
            },
            {
                "command": "git-ai-commiter.commitNow",
                "title": "Generate Commit Message and Commit Now"
            }
        ],
        "configuration": {
            "title": "Git AI Committer",
            "properties": {
                "gitAiCommitter.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable/disable automatic commits",
                    "order": 1
                },
                "gitAiCommitter.geminiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Google Gemini API Key for generating commit messages. Get your API key from https://makersuite.google.com/app/apikey",
                    "order": 2
                },
                "gitAiCommitter.commitInterval": {
                    "type": "number",
                    "default": 300,
                    "description": "Interval in seconds between automatic commits (0 to disable)",
                    "order": 3
                },
                "gitAiCommitter.inactivityTimeout": {
                    "type": "number",
                    "default": 120,
                    "description": "Trigger commit after this many seconds of inactivity (0 to disable)",
                    "order": 4
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "simple-git": "^3.22.0"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "esbuild": "^0.24.0",
        "eslint": "^9.16.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.7.2"
    }
}
